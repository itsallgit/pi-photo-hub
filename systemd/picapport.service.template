[Unit]
Description=Picapport Photo Server
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/pi-photo-hub/picapport
# Run headless (GUI disabled)
ExecStart=/opt/java/bin/java -Dpicapport.gui.enabled=false -jar /home/pi/pi-photo-hub/picapport/picapport.jar
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
